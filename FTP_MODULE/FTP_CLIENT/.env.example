# Healthcare FTP Processing Service Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_ROLE_KEY=

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
# Database batch size for inserts/updates
DB_BATCH_SIZE=25

# Delete files after successful processing (true/false)
DELETE_AFTER_PROCESS=true

# Upload processed files to Supabase storage (true/false)
UPLOAD_TO_SUPABASE=true

# =============================================================================
# DATABASE TUNING
# =============================================================================
# Number of database retry attempts
DB_RETRY_ATTEMPTS=3

# Database connection timeout (seconds)
DB_CONNECTION_TIMEOUT=30

# =============================================================================
# SCHEDULING CONFIGURATION
# =============================================================================
# Cron expression for file fetching (every minute for testing)
FETCH_CRON_EXPRESSION=*/1 * * * *


# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Supabase storage bucket name
STORAGE_BUCKET_NAME=healthcare-files

# =============================================================================
# FILE SYSTEM CONFIGURATION
# =============================================================================
# Container mount path for FTP server
CONTAINER_FTP_MOUNT_PATH="/"
